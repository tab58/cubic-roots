{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules"]
}
